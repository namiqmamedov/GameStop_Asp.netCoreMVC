@model PageNationList<Product>


<div class="content">
    <div class="main product-index">
        <div class="row">
            <div class="d-flex">
                <div class="col-4">
                    <h2>Product</h2>
                </div>
                <div class="col-8 d-flex justify-content-end">
                    <a asp-area="admin" asp-controller="product" asp-action="create">
                        <div class="btn btn-primary create-btn">Create</div>
                    </a>
                </div>
            </div>

            <div class="product-filter">

                <div class="sort-section">


                    <div class="select">
                        <i class="fa-solid fa-filter"></i>
                        <select>

                            <option>

                                Best Matches

                            </option>
                            <option>

                                Price Low To High

                            </option>
                            <option>
                                Product Name A - Z
                            </option>
                            <option value="1">
                                Product Name Z - A
                            </option>
                            <option value="2">
                                Most Popular
                            </option>
                            <option value="3">
                                Top Sellers
                            </option>
                            <option value="1">
                                Release Date Oldest to Newest
                            </option>
                            <option value="2">
                                Release Date Newest to Oldest
                            </option>
                            <option value="3">
                                Most Relevant
                            </option>
                        </select>
                    </div>

                    <form>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="sortBold"></span><span class="selected-option"> Best Matches</span>
                            </button>
                            <ul name="status" class="dropdown-menu">
                                <span class="up-arrow"></span>
                                <li><a class="dropdown-item sort-item priceSortArea" asp-area="admin" asp-controller="product" asp-action="Matched" asp-route-id="@Model.Select(x=>x.Id).FirstOrDefault()">Best Matched</a></li>
                                <li><a class="dropdown-item sort-item priceSortArea" asp-area="admin" asp-controller="product" asp-action="Active" asp-route-id="@Model.Select(x=>x.Id).FirstOrDefault()">Active</a></li>
                                <li><a class="dropdown-item sort-item priceSortArea" asp-area="admin" asp-controller="product" asp-action="InActive" asp-route-id="@Model.Select(x=>x.Id).FirstOrDefault()">Inactive</a></li>
                                <li><a class="dropdown-item sort-item priceSortArea" asp-area="admin" asp-controller="product" asp-action="OldToNew" asp-route-id="@Model.Select(x=>x.Id).FirstOrDefault()">Date Oldest to Newest</a></li>
                                <li><a class="dropdown-item sort-item priceSortArea" asp-area="admin" asp-controller="product" asp-action="NewToOld" asp-route-id="@Model.Select(x=>x.Id).FirstOrDefault()">Date Newest to Oldtest</a></li>
                                <li><a class="dropdown-item sort-item priceSortArea" asp-area="admin" asp-controller="product" asp-action="AtoZ" asp-route-id="@Model.Select(x=>x.Id).FirstOrDefault()">Product Name A-Z</a></li>
                                <li><a class="dropdown-item sort-item priceSortArea" asp-area="admin" asp-controller="product" asp-action="ZtoA" asp-route-id="@Model.Select(x=>x.Id).FirstOrDefault()">Product Name Z-A</a></li>
                               
                            </ul>
                        </div>
                    </form>


                </div>
            </div>


            @await Html.PartialAsync("_ProductIndexPartial", Model)
        </div>
    </div>


    <nav class="justify-content-center d-flex" aria-label="Page navigation example">
        <ul class="pagination">
            @if (Model.HasPrev)
            {
                <li class="page-item">

                    <a class="page-link" asp-area="admin" asp-controller="product" asp-action="index" asp-route-page="1" aria-label="Previous">


                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Very</span>
                    </a>
                </li>

                <li class="page-item">

                    <a class="page-link" asp-area="admin" asp-controller="product" asp-action="index" asp-route-page="@(Model.PageIndex-1)" aria-label="Previous">


                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            @for (int i = Model.Start; i <= Model.End; i++)
            {
                <li class="page-item @(Model.PageIndex == i ? "active" :"")"><a class="page-link" asp-area="admin" asp-controller="product" asp-action="index" asp-route-page="@i">@i</a></li>

            }
            @if (Model.HasNext)
            {
                <li class="page-item">
                    <a class="page-link" asp-area="admin" asp-controller="product" asp-action="index" asp-route-page="@(Model.PageIndex+1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>

                <li class="page-item">
                    <a class="page-link" asp-area="admin" asp-controller="product" asp-action="index" asp-route-page="@(Model.TotalPages)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">very da</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

