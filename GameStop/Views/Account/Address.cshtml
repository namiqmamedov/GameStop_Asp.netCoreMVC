<div class="account-settings">
    <div class="settings-acc">
        <div class="account-dashboard-header">
            <div class="container">
                <div class="col-8 mt-auto mb-auto">
                    <h3 class="text-white">Welcome, Namiq</h3>
                </div>
                <div class="col-4 mt-auto mb-auto">
                    <div class="pull-right">
                        <a class="logout_acc" href="#">Log out</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="account-dashboard d-flex">
                    <div class="my-acc-settings col-3">
                        <div class="leftSection">
                            <div class="card-acc">
                                <div class="card-body-acc">
                                    <ul class="list-group-acc">
                                        <li class="list-acc d-flex">
                                            <img alt="my-account"
                                                 src="https://www.gamestop.com/on/demandware.static/-/Sites-gamestop-us-Library/default/dw0a160614/Account-dashboard-Icons/my-account.svg"
                                                 title="my-account">
                                            <p class="acc-header">My Account</p>
                                        </li>
                                        <ul id="list-acc" class="list-group-acc">
                                            <li class="list-group-item">
                                                <p class="acc-header1">Account Setting</p>
                                            </li>
                                            <li class="list-group-item">
                                                <a class="dashboard-nav-link" asp-controller="account" asp-action="index">
                                                    Personal
                                                    Data
                                                </a>
                                            </li>
                                            <li class="list-group-item">
                                                <a class="dashboard-nav-link" asp-controller="account" asp-action="password">Password</a>
                                            </li>
                                            <li class="list-group-item">
                                                <a class="dashboard-nav-link" asp-controller="account" asp-action="address">Address Book</a>
                                            </li>

                                        </ul>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="data-section col-9">
                        <div class="acc-data">


                            <div class="card">
                                <div class="info">
                                    <h1 class="acc-center-header">Edit Address</h1>
                                </div>
                                <div class="forms">
                                    <form method="POST" autocomplete="off">

                                        <div class="nameInput">
                                            <div class="inputs">
                                                <label class="field-pass" for="firstName">First Name</label><input id="firstName" type="text"
                                                                                                                   name="currentPassword" name="currentFirst" value="Namiq" maxlength="50" required autocomplete="off">
                                            </div>


                                            <div class="inputs">
                                                <label class="field-pass" for="lastName">Last Name</label><input id="lastName" type="text"
                                                                                                                 name="currentPassword" name="currentLast" value="Mamedov" maxlength="50" required autocomplete="off">
                                            </div>
                                        </div>

                                        <div class="inputs">
                                            <label for="streetAddress" class="field-pass">Street Address</label><input id="streetAddress" name="streetAddr" type="text"
                                                                                                                       autocomplete="off" value="South Dakota" aria-required="true">
                                        </div>


                                        <div class="inputs">
                                            <label for="aptSuite" class="field-pass">Apt,Suite,Unit (Optional)</label><input name="aptOption" id="aptSuite" type="text"
                                                                                                                             autocomplete="on">
                                        </div>

                                        <div class="stateSection">
                                            <div class="inputs">
                                                <label for="zipCode" class="field-pass">Zip Code</label> <input name="zipAddr" id="zipCode" type="text"
                                                                                                                autocomplete="off" value="10080" aria-required="true">
                                            </div>


                                            <div class="inputs">
                                                <label for="cityAddr" class="field-pass">City</label> <input id="cityAddr" name="city" type="text"
                                                                                                             autocomplete="off" value="NY" aria-required="true">
                                            </div>

                                            <div class="inputs">
                                                <label for="state" class="field-pass">State</label>
                                                <select name="stateAddr" class="custom-select d-block w-100" id="state" required>
                                                    <option value=""></option>
                                                    <option id="AL" value="AL">Alabama</option>
                                                    <option id="AK" value="AK">Alaska</option>
                                                    <option id="AZ" value="AZ">Arizona</option>
                                                    <option id="AR" value="AR">Arkansas</option>
                                                    <option id="AA" value="AA">Armed Forces - Americas</option>
                                                    <option id="AE" value="AE">Armed Forces - Europe</option>
                                                    <option id="AP" value="AP">Armed Forces - Pacific</option>
                                                    <option id="CA" value="CA">California</option>
                                                    <option id="CO" value="CO">Colorado</option>
                                                    <option id="CT" value="CT">Connecticut</option>
                                                    <option id="DE" value="DE">Delaware</option>
                                                    <option id="DC" value="DC">District of Columbia</option>
                                                    <option id="FL" value="FL">Florida</option>
                                                    <option id="GA" value="GA">Georgia</option>
                                                    <option id="HI" value="HI">Hawaii</option>
                                                    <option id="ID" value="ID">Idaho</option>
                                                    <option id="IL" value="IL">Illinois</option>
                                                    <option id="IN" value="IN">Indiana</option>
                                                    <option id="IA" value="IA">Iowa</option>
                                                    <option id="KS" value="KS">Kansas</option>
                                                    <option id="KY" value="KY">Kentucky</option>
                                                    <option id="LA" value="LA">Louisiana</option>
                                                    <option id="ME" value="ME">Maine</option>
                                                    <option id="MD" value="MD">Maryland</option>
                                                    <option id="MA" value="MA">Massachusetts</option>
                                                    <option id="MI" value="MI">Michigan</option>
                                                    <option id="MN" value="MN">Minnesota</option>
                                                    <option id="MS" value="MS">Mississippi</option>
                                                    <option id="MO" value="MO">Missouri</option>
                                                    <option id="MT" value="MT">Montana</option>
                                                    <option id="NE" value="NE">Nebraska</option>
                                                    <option id="NV" value="NV">Nevada</option>
                                                    <option id="NH" value="NH">New Hampshire</option>
                                                    <option id="NJ" value="NJ">New Jersey</option>
                                                    <option id="NM" value="NM">New Mexico</option>
                                                    <option id="NY" value="NY" selected>New York</option>
                                                    <option id="NC" value="NC">North Carolina</option>
                                                    <option id="ND" value="ND">North Dakota</option>
                                                    <option id="OH" value="OH">Ohio</option>
                                                    <option id="OK" value="OK">Oklahoma</option>
                                                    <option id="OR" value="OR">Oregon</option>
                                                    <option id="PA" value="PA">Pennsylvania</option>
                                                    <option id="PR" value="PR">Puerto Rico</option>
                                                    <option id="RI" value="RI">Rhode Island</option>
                                                    <option id="SC" value="SC">South Carolina</option>
                                                    <option id="SD" value="SD">South Dakota</option>
                                                    <option id="TN" value="TN">Tennessee</option>
                                                    <option id="TX" value="TX">Texas</option>
                                                    <option id="UT" value="UT">Utah</option>
                                                    <option id="VT" value="VT">Vermont</option>
                                                    <option id="VA" value="VA">Virginia</option>
                                                    <option id="WA" value="WA">Washington</option>
                                                    <option id="WV" value="WV">West Virginia</option>
                                                    <option id="WI" value="WI">Wisconsin</option>
                                                    <option id="WY" value="WY">Wyoming</option>
                                                </select>
                                            </div>
                                        </div>


                                        <div class="inputs">
                                            <label for="phoneNum" class="field-pass">Phone Number</label><input id="phoneNum" name="phoneNumber" type="tel"
                                                                                                                autocomplete="off" value="(715) 575-41-67" aria-required="true">
                                        </div>

                                        <div class="save-button-form w-100">
                                            <button id="savebutton" type="submit" class="btn ">Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

